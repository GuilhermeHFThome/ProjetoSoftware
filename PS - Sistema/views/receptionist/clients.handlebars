<div class="container mt-4"> 

    <h1>
    Reservas Cadastradas:
    </h1>
    <hr>
    {{#each clientes}} <!--Referenciar o nome da tabela do banco de dados-->
        <div class="card mt-4">
            <div class="card-body">
                
                <h2>{{dataValues.id}}</h2>
                <h4>N° do Quarto: {{dataValues.nquarto}}</h4>
                <h4>Nome: {{dataValues.name}}</h4>
                <h4>Sobrenome: {{dataValues.lastName}}</h4>
        <hr>
                <a href="http://localhost:8081/receptionist/deletar/{{dataValues.id}}">
                    <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A; margin-right:10px;">Deletar Reserva</button>
                </a>
                <a href="http://localhost:8081/receptionist/searched/{{dataValues.id}}">
                    <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Verificar Reserva</button>
                </a>

            </div>
        </div>
        <hr>    
    {{/each}}
    
    <br><br>
    <a href="http://localhost:8081/receptionist/addClient">
        <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Cadastrar Reserva</button>
    </a>    

    <a href="http://localhost:8081/receptionist/index">
        <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Voltar para Página Inicial</button>
    </a>
</div>

