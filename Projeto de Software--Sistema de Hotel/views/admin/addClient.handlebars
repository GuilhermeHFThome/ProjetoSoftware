

<div class="container mt-4">

  {{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
  {{else}}

  {{/each}}

<div class="container mt-4">

  <form class="row g-3" method="post" action="/admin/poscadastro">
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Nome</label>
    <input name="name" type="name" class="form-control" id="inputName4" >
  </div>

  <div class="col-md-6">
    <label for="inputPassword4" class="form-label">Sobrenome</label>
    <input name="lastName" type="name" class="form-control" id="inputmname4" >
  </div>

  <div class="col-12">
    <label for="inputAddress" class="form-label">Email</label>
    <input name="email" type="email" class="form-control" id="inputEmail" >
  </div>

  <div class="col-12">
    <label for="inputPhoneNumber" class="form-label">Telefone</label>
    <input name="number" type="text" class="form-control" id="inputNumber" >
  </div>

  <div class="col-12">
      <label for="inputPhoneNumber" class="form-label">Data de check-in</label>
      <input name="checkin" type="date" class="form-control" id="inputcheckin" >
  </div>

  <div class="col-12">
      <label for="inputPhoneNumber" class="form-label">Data de check-out</label>
      <input name="checkout" type="date" class="form-control" id="inputcheckout" >
  </div>

   <div class="form-group">
    <label class="mr-sm-2" for="room">N° dos Quartos: </label>
    <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="room" name="nquarto" required>
      <option value="{{dataValues.numberq}}" disabled selected hidden> Escolha o quarto </option>
      {{#each quartos}}
    
          <option value="{{dataValues.numberq}}">{{dataValues.numberq}}</option>

      {{/each}}
    </select>
  </div>
  
  <div class="col-12">
    <button type="submit" class="btn btn-primary" style="background-color:#0B090A ; border-color:#0B090A; margin-top:30px; ">Confirmar Cadastro</button>
  </div>

  <input type="hidden" name="numberq" value="{{dataValues.numberq}}">
</form>

<hr>

<a href="http://localhost:8081/admin/index">
    <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Voltar para Página Inicial</button>
</a>

</div>

