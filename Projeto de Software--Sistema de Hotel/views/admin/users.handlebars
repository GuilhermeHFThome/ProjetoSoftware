<div class="container mt-4"> 

    <h1>
    Usuários cadastrados:
    </h1>
    <hr>
    {{#each usuarios}} <!--Referenciar o nome da tabela do banco de dados-->
        <div class="card mt-4">
            <div class="card-body">

                <h2>{{dataValues.id}}</h2>
                <h4>Nome: {{dataValues.nameU}}</h4>
                <h4>Sobrenome: {{dataValues.lastNameU}}</h4>
                <h4>Usuário: {{dataValues.login}}</h4>                
<hr>
                <a href="http://localhost:8081/admin/deletarUser/{{dataValues.id}}">
                    <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A; margin-right:10px;">Deletar Usuário</button>
                </a>
                <a href="http://localhost:8081/admin/searchedUser/{{dataValues.id}}">
                    <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Verificar Usuário</button>
                </a>

            </div>
        </div>
        <hr>    
    {{/each}}
    
    <br><br>
    <a href="http://localhost:8081/admin/addUser">
        <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Cadastrar Usuário</button>
    </a>    

    <a href="http://localhost:8081/admin/index">
        <button class="btn btn-success" style="background-color:#0B090A ; border-color:#0B090A;">Voltar para Pagina Inicial</button>
    </a>
</div>

